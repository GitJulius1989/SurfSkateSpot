<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre Surf Skate Spot"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido a Surf Skate Spot, tu guía definitiva para encontrar los mejores lugares para disfrutar de tus deportes favoritos. Nuestra misión es conectar a la comunidad de surfistas y skaters, proporcionando información detallada y actualizada sobre spots, condiciones y mucho más."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Características principales:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- Mapa interactivo con ubicaciones de spots.\n- Información detallada sobre cada spot (descripción, condiciones, fotos).\n- Funcionalidad de favoritos para guardar tus lugares preferidos.\n- Posibilidad de listar los spots visibles en el mapa."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Si tienes alguna pregunta o sugerencia, no dudes en contactarnos a través de correo electrónico a info@surfskatespot.com."
            android:textSize="16sp" />

    </LinearLayout>

</ScrollView>