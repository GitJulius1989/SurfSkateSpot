<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.view.SpotDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvSpotName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nombre del Spot de Surf / Skate" />

        <FrameLayout
            android:id="@+id/imageGalleryContainer"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpotName">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Carrusel de Imágenes / ViewPager2"
                android:textColor="#888888"
                android:textSize="16sp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageGalleryContainer" />

        <TextView
            android:id="@+id/tvSpotDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionLabel"
            tools:text="Esta es una descripción detallada del spot de surf o skate, incluyendo información sobre el tipo de olas, la superficie de skate, las mejores horas, etc. Podría ser un texto bastante largo que requiera scrolling." />

        <TextView
            android:id="@+id/tvSportTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Deporte:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpotDescription" />

        <LinearLayout
            android:id="@+id/llSportTypes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSportTypeLabel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Surf, Skate, Surfskate"
                android:paddingEnd="8dp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/llFavoriteStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llSportTypes">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorito:"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkboxFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:checked="false" /> </LinearLayout>

        <TextView
            android:id="@+id/tvRatingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valoración:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llSportTypes" />

        <LinearLayout
            android:id="@+id/llRating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRatingLabel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 / 5 estrellas" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvCommentsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comentarios:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llRating" />

        <LinearLayout
            android:id="@+id/llComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCommentsLabel">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primer comentario..." />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Segundo comentario..." />
            <Button
                android:id="@+id/btnViewAllComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver todos los comentarios"
                android:layout_marginTop="8dp"
                style="@style/Widget.Material3.Button.TextButton"
                android:padding="0dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llActionButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/llComments"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btnAddComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir Comentario"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnAddRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir Valoración"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnEditSpot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Spot"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible"/>

            <Button
                android:id="@+id/btnDeleteSpot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Spot"
                style="@style/Widget.Material3.Button.OutlinedButton.Danger"
                android:textColor="@color/design_default_color_error"
                app:strokeColor="@color/design_default_color_error"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>